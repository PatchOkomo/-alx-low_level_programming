#include "main.h"
/**
 * int print_last_digit(int i) returns last digit of an integer
 * @i: integer to be checked
 * Return: n- last digit of integer i
 */
int print_last_digit(int i)
{
	int n;

	n = i % 10;

	if (n > 0)
	{
		return (n);
	}

	else if (n < 0)
	{
		return (-n);
	}

	else
	{
		return (0);
	}
}
