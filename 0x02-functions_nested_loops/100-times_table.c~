#include "main.h"

/**
 * print_times_table - print multiplication table up to n
 * @n: integer argument
 */

void print_times_table(int n)
{
	int i;/*Variable for the row*/
	int j;/*Variable for the column*/
	int x;/*Variable for the product*/

	if (n >= 0 && n <= 15)
	{
		i = 0;
		while (i <= n)
		{
			j = 0;
			while (j <= n)
			{
				x = i * j;

				if (j == 0)
				{
					_putchar('0' + x);
				}

				else if (x <= n)
				{
					_putchar(',');
					_putchar(' ');
					_putchar(' ');
					_putchar('0' + x);
				}

				else if (x > n)
				{
					_putchar(',');
					_putchar(' ');
					_putchar('0' + (x / 10));
					_putchar('0' + (x % 10));
				}

				j++;
			}
			i++;
			_putchar('\n');
		}
	}
}
