#include "main.h"

/**
 * print_diagonal - prints the diagonal character on nth position
 * @n: Parameter for the \
 * Return: none
 */

void print_diagonal(int n)
{
	int s;/*variable for the spaces before the '/'*/

	if (n > 0)
	{
		s = 1;
		while (s <= n)
		{
			if (s < n)
			{
				_putchar(' ');
			}
			else
			{
				_putchar('\\');
			}
			s++;
		}
		_putchar('\n');
	}

	else
	{
		_putchar('\n');
	}
}
